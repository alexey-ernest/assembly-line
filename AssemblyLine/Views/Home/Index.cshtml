@model AssemblyLine.Models.HomeViewModel

<div class="row">
    <div class="col-md-2">
        <div class="list-group">
            <a href="" ui-sref="app.home" class="list-group-item">Dashboard</a>
        </div>

        <div class="list-group">
            <a href="" ui-sref="app.projects" class="list-group-item">Projects</a>
            <a href="" ui-sref="app.lines" class="list-group-item">Lines</a>
            <a href="" ui-sref="app.vehicles" class="list-group-item">Vehicles</a>
            <a href="" ui-sref="app.employees" class="list-group-item">Employees</a>
        </div>
    </div>
    <div class="col-md-10">
        <div class="panel page-container">
            <div class="panel-heading"></div>
            <div class="panel-body">
                <div ui-view></div>
            </div>
        </div>
    </div>
</div>

@section TitleBinding { ng-bind="pageTitle" }

@section scripts {
    @Scripts.Render("~/bundles/app")

    <script>
        angular.module('assemblyLine').config(['user', function (user) {
            user.id = '@User.Identity.Name';
            user.roles = [@Html.Raw(string.Join(",", Model.UserRoles.Select(r => string.Format("'{0}'", r))))];
        }]);
    </script>
}

@Html.Partial("_Home")
@Html.Partial("_Employees")
@Html.Partial("_Vehicles")
@Html.Partial("_Projects")
@Html.Partial("_Lines")